<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorBG"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@mipmap/icon_me_top_bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>

    <FrameLayout
        android:layout_marginTop="-25dp"
        android:orientation="vertical"
        android:background="@color/colorFFFFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="25dp"
            android:background="@color/colorBG"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_self_info"
                android:gravity="center_vertical"
                android:paddingLeft="100dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:paddingRight="20dp"
                tools:ignore="RtlHardcoded,RtlSymmetry">

                <TextView
                    android:id="@+id/tv_name"
                    android:textSize="16sp"
                    android:text=""
                    android:textColor="@color/colorText333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="120dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_account"
                    android:textSize="12sp"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorGray999999"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:src="@mipmap/icon_arrow_right_gray"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <View
                android:background="@color/colorGray666666"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                tools:ignore="RtlHardcoded" />

            <LinearLayout
                android:id="@+id/ll_to_permission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="25dp"
                tools:ignore="RtlHardcoded,RtlSymmetry">
                
                <ImageView
                    android:src="@mipmap/icon_promission_orange"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:textColor="@color/colorText333333"
                    android:text="权限"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:src="@mipmap/icon_arrow_right_gray"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <View
                android:background="@color/colorGray666666"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                tools:ignore="RtlHardcoded" />

            <LinearLayout
                android:id="@+id/ll_to_logcat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="25dp"
                tools:ignore="RtlHardcoded,RtlSymmetry">

                <ImageView
                    android:src="@mipmap/icon_logcat_orange"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:textColor="@color/colorText333333"
                    android:text="日志"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:src="@mipmap/icon_arrow_right_gray"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <View
                android:background="@color/colorGray666666"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                tools:ignore="RtlHardcoded" />

            <LinearLayout
                android:id="@+id/ll_to_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="25dp"
                tools:ignore="RtlHardcoded,RtlSymmetry">

                <ImageView
                    android:src="@mipmap/icon_setting_orange"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:textColor="@color/colorText333333"
                    android:text="设置"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:src="@mipmap/icon_arrow_right_gray"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <View
                android:background="@color/colorGray666666"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_head"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/icon_man_orange_circle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            tools:ignore="ContentDescription,RtlHardcoded" />
    </FrameLayout>

</LinearLayout>