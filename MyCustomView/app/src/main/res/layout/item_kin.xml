<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="RtlHardcoded">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="25dp"
            android:id="@+id/ll_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_self_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="2dp"
                android:src="@drawable/family_avatar"
                tools:background="@drawable/shape_red_circle" />

            <TextView
                android:id="@+id/tv_self_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#0c0c0c"
                android:textSize="14sp"
                tools:text="囧恩" />

            <TextView
                android:id="@+id/tv_self_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#0c0c0c"
                android:textSize="12sp"
                tools:text="配偶配偶" />

        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:visibility="gone"
            android:background="@color/colorBG"
            android:layout_width="30dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginRight="25dp"
            android:visibility="gone"
            android:id="@+id/ll_spouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_white"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/iv_spouse_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="2dp"
                android:src="@drawable/family_avatar"
                tools:background="@drawable/shape_red_circle" />

            <TextView
                android:id="@+id/tv_spouse_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#0c0c0c"
                android:textSize="14sp"
                tools:text="囧恩" />

            <TextView
                android:id="@+id/tv_spouse_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#0c0c0c"
                android:textSize="12sp"
                tools:text="配偶配偶" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_child"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>
</LinearLayout>